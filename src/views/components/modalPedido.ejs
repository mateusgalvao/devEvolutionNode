<section id="modal">
    <div id="card">
        <form method="POST" action="/pedido">
            <div class="form-control">

            <label for="nome">Nome:</label>
            <input type="text" name="nome" id="nome">
          
            <label for="endereco">Endereço:</label>
            <input type="text" name="endereco" id="endereco">
          
            <label for="produto">Produto:</label>
            <select name="produto" id="produto">
              <option value="1">Produto 1</option>
              <option value="2">Produto 2</option>
              <option value="3">Produto 3</option>
            </select>
          
            <input type="submit"></input>
            <br>
        </div>

          </form>
          

        <div id="head">
            <h2>Confirmação</h2>
            <a id="close" href="/home"><i class="bi bi-x"></i></a>
        </div>
        
        <hr>
        <p>Deseja comprar o item: <%= produto.nome %> <%= produto.sabor %>? </p>
        <form action="/home/updateOne/<%= produto._id %>" method="post" value="{{randomId}}">
        <div id="btns">
            <a id="btnNot" href="/home">Não</a>
            <button id="btnYes" type="submit" id="btnYes">Confirmar</button>
        </div>
        </form>
    </div>
</section>
